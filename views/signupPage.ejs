<link rel="stylesheet" href="/css/signUp.css">
<div class="main-div-signup">
    <h1>
        Sign Up
    </h1>
    <hr>
    <form action="/users/create" method="post">
        <label for="name">Name</label>
        <input type="text" id="username" name="name" required>
        <label for="email">E-mail</label>
        <input type="email" id="email" name="email" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <label for="confirm_password">Confirm Your Password</label>
        <input type="password" id="confirm_password" name="confirm_password" required>
        <input type="hidden" name="permission" value="employee">
        <p>Your registration signifies your acceptance of our Terms of Service, Privacy Policy, and Cookie Policy.</p>
        <button type="submit">Join Now </button>
            <% if(!locals.user){ %>
                <p>Already have an Account <a href="/users/signin"> Sign In Here!</a></p>
            <% } %>
    </form>
</div>
